@{
    ViewBag.Title = "Thêm Ca Sĩ Mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section js {
    @*vung soan thao*@
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>

    <script>
        // cấu hình ckeditor cho textarea nhập liệu
        CKEDITOR.replace("Nationality");
        function BrowseServer() {
            var finder = new CKFinder();
            finder.selectActionFunction = SetFileField;
            finder.popup();
        }
    </script>
}
<h3>Thêm Ca Sĩ Mới</h3>
<form class="form-horizontal" method="post" asp-action="CaSiMoi" id="AddSingerForm" enctype="multipart/form-data">

    <div class="form-group">
        <label for="TenCaSi" class="col-sm-2 control-label">Tên Ca Sĩ</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="TenCaSi" name="Name" required placeholder="Nhập tên ca sĩ" />
        </div>
    </div>

    <div class="form-group">
        <label for="Content" class="col-sm-2 control-label">Nội dung</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Content" name="Nationality" required placeholder="Nhập nội dung" />
        </div>
    </div>

    <div class="form-group">
        <label for="SingerImage" class="col-sm-2 control-label">Ảnh Ca Sĩ</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" id="SingerImage" name="SingerImage" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-plus"></i>&nbsp;Thêm Ca Sĩ
            </button>
            <a href="@Url.Action("QuanLiCaSi","Admin")" class="btn btn-success">
                <i class="fa fa-reply"></i>&nbsp;Quay Lại
            </a>
        </div>
    </div>
</form>
