    <script>
        function playChord(chordName) {
            const audioElement = document.getElementById('audio-' + chordName);
            if (audioElement) {
                audioElement.play();
            }
        }

        function slideInChords() {
            const containers = document.querySelectorAll('.svg-container, .png-container');
            const triggerPoint = window.innerHeight * 0.8; 
            containers.forEach(container => {
                const containerTop = container.getBoundingClientRect().top;
                if (containerTop < triggerPoint) {
                    container.classList.add('slide-in');
                }
            });
        }
        window.addEventListener('scroll', slideInChords);
        window.addEventListener('DOMContentLoaded', slideInChords);
        function toggleDescription(button) {
            const desc = button.nextElementSibling;
            if (desc.classList.contains('show-desc')) {
                desc.classList.remove('show-desc');
                button.textContent = 'Xem cách đặt tay';
            } else {
                desc.classList.add('show-desc');
                button.textContent = 'Ẩn cách đặt tay';
            }
        }
    </script>

