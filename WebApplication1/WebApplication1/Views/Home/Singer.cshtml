<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Singers</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .custom-card {
            margin-bottom: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .custom-card .title h2 {
            font-size: 30px;
            color: #343a40;
            padding: 10px 0;
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 20px;
        }

        .singer-info {
            display: flex;
            align-items: center;
        }

        .singer-image img {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
        }

        .singer-details {
            flex-grow: 1;
        }

        .singer-details .card-title a {
            font-size: 20px;
            color: #007bff;
            text-decoration: none;
        }

        .singer-details .card-title a:hover {
            text-decoration: underline;
        }

        .singer-details .card-text {
            color: #495057;
            font-size: 16px;
        }

        .singer-info:hover {
            background-color: #f0f0f0;
        }

        
    </style>
</head>

<body>
    <div class="container">
        <div class="custom-card">
            <div class="title">
                <h2>Ca sĩ nổi bật</h2>
            </div>
            <div class="row">
                @foreach (var singer in Model)
                {
                    <div class="col-12 mb-3">
                        <div class="card song-card custom-card">
                            <div class="singer-info">
                                <div class="singer-image">
                                    <img src="@singer.Image" alt="@singer.Name">
                                </div>
                                <div class="singer-details">
                                    <div class="card-body">
                                        <div class="card-title">
                                            <a href="@Url.Action("Details", "Singer", new { id = singer.Id })">
                                                @singer.Name
                                            </a>
                                        </div>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Thông tin: @Html.Raw(@singer.Content)
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

</html>
