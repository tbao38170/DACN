<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title>ADMIN</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <!-- Bootstrap Core CSS -->
    <link href="/Content/Admin-style/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="/Content/Admin-style/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet" />
    <!-- Timeline CSS -->
    <link href="/Content/Admin-style/dist/css/timeline.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/Content/Admin-style/dist/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="/Content/Admin-style/bower_components/fontawesome-free-6.5.1-web/css/all.min.css" rel="stylesheet" />

    <link href="/Transposition/css/html-chords.css" rel="stylesheet" />

    <script type="text/javascript" src="/Transposition/js/jquery.js"></script>
    <script src="/Content/Admin-style/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="/Content/Admin-style/bower_components/metisMenu/dist/metisMenu.min.js"></script>
    <script src="/Content/Admin-style/dist/js/sb-admin-2.js"></script>
    <meta charset="utf-8">
    @RenderSection("css", required: false)
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action(" Index","Admin")">Chào mừng Quản trị viên !</a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);">
                        <i class="fa fa-user fa-fw"></i><i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i>Thông Tin</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a id="logoutLink" href="#">Đăng xuất</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-home fa-fw"></i>Trở Lại Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Admin")">
                                <i class="fa fa-dashboard fa-fw"></i>Trang Chủ
                                Admin
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("QuanLiBaiViet", "Admin" )">
                                <i class="fa fa-edit fa-fw"></i>Quản Lí
                                Bài Viết
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        @RenderSection("title", false)
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div>
                @RenderBody()
                <form id="logoutForm" method="post" action="@Url.Action("Logout","Login")"></form>
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <script>
        $(document).ready(function () {
            // Kích hoạt dropdown khi click
            $('.dropdown-toggle').click(function () {
                $(this).next('.dropdown-menu').toggle();
            });

            // Ẩn dropdown khi click bên ngoài dropdown
            $(document).click(function (event) {
                var clickTarget = $(event.target);
                if (!clickTarget.closest('.dropdown-toggle').length && !clickTarget.closest('.dropdown-menu').length) {
                    $('.dropdown-menu').hide();
                }
            });
        });

        // Xử lý đăng xuất
        $('#logoutLink').click(function () {
            alert("Đăng xuất thành công");
            $('#logoutForm').submit();
        });
    </script>
    @RenderSection("js", required: false)
</body>

</html>