@model string
@{
    ViewBag.Title = "Verify OTP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1140px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            padding:0px 0px 0px 0px !important;
        }

        .row {
            margin: 0;
        }

        img {
            width: 100%;
            height: 650px;
            object-fit: cover;
            border-radius: 8px 0 0 8px;
        }

        .form-container {
            padding: 30px;
        }

        h2 {
            margin-bottom: 20px;
            font-weight: bold;
            text-align: center;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            width: 100%;
            font-size: 18px;
        }

        .alert {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card-container" style="width:888px;height:650px">
            <div class="row">
                <!-- Cột bên trái chứa hình ảnh -->
                <div class="col-md-6 p-0">
                    <img src="~/img/a.png" alt="Background Image">
                </div>
                <!-- Cột bên phải chứa form -->
                <div class="col-md-6 form-container">
                    <h2>Xác nhận mã OTP</h2>
                    <!-- Hiển thị thông báo -->
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">@TempData["Message"]</div>
                    }
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                    {
                        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
                    }
                    <!-- Form xác nhận OTP -->
                    <form method="post" action="@Url.Action("VerifyOtp", "Account")">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <div class="form-group">
                            <label for="otpCode">Nhập mã OTP</label>
                            <input type="text" class="form-control" id="otpCode" name="otpCode" placeholder="Nhập mã OTP" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</body>
</html>
